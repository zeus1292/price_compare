# Price Compare - Environment Configuration
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# Required API Keys
# =============================================================================

# OpenAI API Key (required for embeddings and GPT-4o vision)
OPENAI_API_KEY='your_openai_api_key_here'

# Tavily API Key (required for live web search)
TAVILY_API_KEY='your_tavily_api_key_here'

# =============================================================================
# Optional API Keys
# =============================================================================

# Anthropic API Key (optional, for Claude-based reasoning)
ANTHROPIC_API_KEY='your_anthropic_api_key_here'

# Google API Key (optional)
GOOGLE_API_KEY='your_google_api_key_here'

# =============================================================================
# LangSmith Configuration (Optional - for observability)
# =============================================================================

# LangSmith API Key
LANGSMITH_API_KEY='your_langsmith_api_key_here'

# Enable LangSmith tracing (set to true to enable)
LANGSMITH_TRACING=false

# LangSmith project name
LANGSMITH_PROJECT=price-compare

# LangSmith endpoint (uncomment for EU instance)
# LANGSMITH_ENDPOINT=https://eu.api.smith.langchain.com

# =============================================================================
# Security Configuration
# =============================================================================

# Encryption key for sensitive data (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY='your_32_byte_base64_encoded_key_here'

# =============================================================================
# Database Configuration (Optional - defaults provided)
# =============================================================================

# SQLite database path
# SQLITE_PATH=./data/db/products.db

# ChromaDB persistence path
# CHROMA_PATH=./data/db/chroma

# =============================================================================
# Embedding Configuration (Optional - defaults provided)
# =============================================================================

# OpenAI embedding model
# EMBEDDING_MODEL=text-embedding-3-small

# Embedding batch size
# EMBEDDING_BATCH_SIZE=50

# =============================================================================
# Search Configuration (Optional - defaults provided)
# =============================================================================

# Default search result limit
# DEFAULT_SEARCH_LIMIT=10

# Confidence threshold for triggering live search (0.0 to 1.0)
# CONFIDENCE_THRESHOLD=0.9

# Enable live search by default
# ENABLE_LIVE_SEARCH=true

# =============================================================================
# API Configuration (Optional - defaults provided)
# =============================================================================

# API host
# API_HOST=0.0.0.0

# API port
# API_PORT=8000

# CORS allowed origins (comma-separated)
# CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# Processing Configuration (Optional - defaults provided)
# =============================================================================

# Batch size for dataset ingestion
# BATCH_SIZE=100

# Maximum worker threads for parallel processing
# MAX_WORKERS=4
